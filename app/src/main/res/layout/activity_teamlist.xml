                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Dallas Mavericks"
                        android:id="@+id/mavericks"
                        android:layout_row="0"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="76dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Houston Rockets"
                        android:id="@+id/rockets"
                        android:layout_marginEnd="23dp"
                        android:layout_above="@+id/grizzlies"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Memphis Grizzlies"
                        android:id="@+id/grizzlies"
                        android:layout_below="@+id/mavericks"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="New Orleans Pelicans"
                        android:id="@+id/pelicans"
                        android:layout_below="@+id/grizzlies"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="San Antonio Spurs"
                        android:id="@+id/spurs"
                        android:layout_below="@+id/rockets"
                        android:layout_marginTop="16dp"
                        android:layout_alignStart="@+id/rockets" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Denver Nuggets"
                        android:id="@+id/nuggets"
                        android:layout_below="@+id/spurs"
                        android:layout_alignEnd="@+id/spurs"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Minnesota Timberwolves"
                        android:id="@+id/timberwolves"
                        android:layout_below="@+id/pelicans"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Oklahoma City Thunder"
                        android:id="@+id/textView7"
